<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/bg">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="安卓设备"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/main_online"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:textSize="16sp"
        android:background="@color/white"
        android:layout_marginTop="16dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:text="在线状态："
        android:textColor="@color/black" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="请选择通讯协议格式"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/protocol"
            android:layout_height="fill_parent"
            android:layout_width="100dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:background="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@color/white">

        <Button
            android:id="@+id/closeLight"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:text="关灯"
            android:layout_alignParentRight="true"
            android:background="@drawable/selectors_btn_button" />

        <Button
            android:id="@+id/openLight"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/selectors_btn_button"
            android:layout_toLeftOf="@id/closeLight"
            android:text="开灯" />

        <TextView
            android:id="@+id/physicalDeviceId"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/openLight"
            android:textSize="16sp" />
    </RelativeLayout>

    <ScrollView
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="16dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/main_receive"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_margin="10dp" />
    </ScrollView>
</LinearLayout>

